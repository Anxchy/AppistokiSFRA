<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <group formid="customer">
       <field formid="firstName" label="FirstName" type="string" mandatory="true" binding="firstName" max-length="50"/>
		<field formid="lastName" label="LastName" type="string" mandatory="true" binding="lastName" max-length="50"/>
		<field formid="email" label="Email" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"  type="string" mandatory="true" binding="email" max-length="50"/>
		<field formid="interest" label="Interest" type="string" mandatory="true" binding="phone" max-length="50"/>
    </group>
</form>